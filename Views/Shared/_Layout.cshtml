    <script
        src="https://code.jquery.com/jquery-3.3.1.min.js"
        integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
        crossorigin="anonymous">
    </script>
    <script src="https://unpkg.com/scrollreveal"></script>
    <script>
        window.sr=ScrollReveal();
        sr.reveal('nav', {
            duration:2000,
            scale:0.85
            
        });
        sr.reveal('.planForm', {
            duration:2000,
            origin:'left',
            distance:'200px'
            
        });
        // sr.reveal('.dashboardBG table', {
        //     duration:2000,
        //     origin:'bottom',
        //     distance:'200px'
            
        // });
        sr.reveal('.dashboardBG .container .text-center h3', {
            duration:2000,
            origin:'top',
            distance:'100px'
            
        });
        sr.reveal('.guestsList', {
            duration:2000,
            origin:'left',
            distance:'100px'
            
        });
        sr.reveal('.registerSection', {
            duration:2000,
            origin:'left',
            distance:'200px'
            
        });
        sr.reveal('.loginSection', {
            duration:2000,
            origin:'right',
            distance:'300px'
            
        });

        $("table").on("click",".unAccept",function(e){
            e.preventDefault();
            console.log($(this).attr("href"));
            var variable=$(this);
            $.ajax({
                method:"GET",
                url:$(this).attr("href"),
                data:$(this).serialize(),
                success:function(response){
                    variable.parent().prev().html(response["guestCount"]);
                    var button="<a href='accept/"+response["user_id"]+"/"+response["wedding_id"]+"' class='btn btn-success btn-sm accept'>Accept</a>"
                    variable.parent().html(button);
                }
            });
            return false;
            
        });
        $("table").on("click",".accept",function(e){
            e.preventDefault();
            console.log($(this).attr("href"));
            var variable=$(this);
            $.ajax({
                method:"GET",
                url:$(this).attr("href"),
                data:$(this).serialize(),
                success:function(response){
                    variable.parent().prev().html(response["guestCount"]);
                    var button="<a href='unAccept/"+response["user_id"]+"/"+response["wedding_id"]+"' class='btn btn-warning btn-sm unAccept text-light'>UnAccept</a>"
                    variable.parent().html(button);
                }
            });
            return false;
            
        });
    </script>
</body>
</html>